<workunit extends="com/rameses/seti2/templates/CrudForm.xml" 
        allowCreate="false" allowDelete="false" allowEdit="false"
          schemaName="vw_waterworks_bill" entitySchemaName="waterworks_bill">
    <invokers>
        <invoker type="vw_waterworks_bill:open" caption="Waterworks Bill Info" action="open" target="popup"/>
        <!-- ACTIONS -->
        <invoker type="formActions" caption="View Account" action="viewAccount" />   

        <invoker type="formActions" caption="Add Prev Entry" action="addPrevEntry" 
                 visibleWhen="#{ hasNoPrevEntry == true }" />   

        <invoker type="formActions" caption="Rebill" action="rebill" visibleWhen="#{entity.state == 'UNBILLED'}" />  
        <invoker type="formActions" caption="Recalc" action="recalc" />  
        <invoker type="formActions" caption="Edit Reading" action="editReading" />
        <invoker type="formActions" caption="Edit Volume" action="editVolume" />
             
        <invoker type="formActions" caption="View History" action="viewHistory" />  
        
            
        
    </invokers>
    <code class="com.rameses.gov.etracs.waterworks.models.WaterworksBillModel" />
    <pages>
        <page template="com.rameses.gov.etracs.waterworks.views.WaterworksBillPage" />
    </pages>
</workunit>
