<workunit schemaName="waterworks_batch_billing">
    <invokers> 
        <invoker folderid="/menucategory/waterworks/billing" 
                 caption="New Batch Billing" action="create" role="BILLING" index="1" 
                 formId="batchbillingcreate" formTitle="New Batch Billing"/>
        
        <invoker type="waterworks_batch_billing:create" 
                 caption="New Batch Billing" action="create" role="BILLING" 
                 formId="batchbillingcreate" formTitle="New Batch Billing"/>

        <invoker type="waterworks_batch_billing:open" caption="Batch Billing" 
                 action="open" formId="#{entity.objid}" formTitle="#{entity.batchno}"/>

        <!-- INSIDE MENUS -->  
        <!--       
        <invoker type="readingMenu" caption="View Actions" action="showMenuActions" 
                 depends="selectedItem" visibleWhen="#{selectedItem != null}" 
                 target="process" mnemonic="V"/>

        <invoker type="billingMenu" caption="View Actions" action="showMenuActions" 
                 depends="selectedBillItem" visibleWhen="#{selectedBillItem != null}" 
                 target="process" mnemonic="V"/>
        -->
                
        <!-- form actions -->         
        <invoker type="formActions" caption="Submit" action="saveNew" 
                 visibleWhen="#{ mode == 'create' }"/>
                         
        <invoker type="formActions" caption="Print Batch" action="printBatch" 
                 visibleWhen="#{ task.state == 'approved' }"/>

        <invoker type="formActions" caption="Mark for Mobile Reading" action="markMobileReading" 
                 visibleWhen="#{ entity.mobilereading != 1 }"/>

        <invoker type="formActions" caption="Unmark Mobile Reading" action="unmarkMobileReading" 
                xrole="ADMIN"
                visibleWhen="#{ entity.mobilereading == 1 }"/>


    </invokers>
    
    <code class="com.rameses.gov.etracs.waterworks.models.WaterworksBatchBillingModel" />

    <pages>
        <page template="com.rameses.gov.etracs.waterworks.views.WaterworksBatchBillingPage" />
    </pages>  

</workunit>
