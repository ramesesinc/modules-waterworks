<workunit extends="com/rameses/seti2/templates/FormReport.xml">
    <invokers>
        <invoker type="vw_waterworks_bill:form:formActions" 
                 caption="Print Initial Bill" 
                 target="self" 
                 action="preview"
                 index="50"
                 reportId="waterworks_bill" 
                 reportName="com/rameses/gov/etracs/waterworks/reports/waterworks_billing.jasper"
                 txnid="#{entity.objid}" 
                 visibleWhen="#{ entity.initial == 1 &amp;&amp; viewmode == 'summary' }"/>

        <invoker type="vw_waterworks_bill:form:formActions" 
                 caption="View Statement" 
                 target="self" 
                 action="preview"
                 index="51"
                 reportId="waterworks_bill" 
                 reportName="com/rameses/gov/etracs/waterworks/reports/waterworks_statement.jasper"
                 txnid="#{ entity.objid }" 
                 visibleWhen="#{ entity.initial == 1 &amp;&amp; viewmode == 'summary' }"/>


        <invoker type="vw_waterworks_bill:form:formActions" 
                 caption="View Bill" 
                 target="self" 
                 action="preview"
                 index="50"
                 reportId="waterworks_bill" 
                 reportName="com/rameses/gov/etracs/waterworks/reports/waterworks_billing.jasper"
                 txnid="#{entity.objid}" 
                 visibleWhen="#{ mode.matches('view') }"/>
        
        <invoker type="vw_waterworks_bill:form:formActions" 
                 caption="View Statement" 
                 target="self" 
                 action="preview"
                 index="51"
                 reportId="waterworks_bill" 
                 reportName="com/rameses/gov/etracs/waterworks/reports/waterworks_statement.jasper"
                 txnid="#{ entity.objid }" 
                 visibleWhen="#{ mode.matches('view') }"/>
        
    </invokers> 
</workunit>