import com.rameses.annotations.*; 

class WaterworksOnlineBillingService {
	
	@Service(value="WaterworksRegularBillingPaymentService", connection="local-waterworks-server")
	def billingSvc;

	@Service(value="QueryService", connection="local-waterworks-server")
	def querySvc;

	@ProxyMethod 
	public def getBilling( param ) {
		def bill = billingSvc.getBilling( [id: param.refno] );

		def m = [_schemaname:"vw_waterworks_bill"];
		m.findBy = [objid: bill.billid];
		def b = querySvc.findFirst( m );
		bill.putAll( b );
		return bill;
	} 
}